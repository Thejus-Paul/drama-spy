{
  "name": "DraMA Spy",
  "description": "To keep track of the dramas, manga, light novels and animes that I watch.",
  "private": true,
  "scripts": {
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "compile": "tsgo --noEmit",
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "format": "prettier -c .",
    "format:fix": "prettier -w .",
    "generate-schemas": "tsx ./scripts/generate_schemas.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "wxt prepare",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox"
  },
  "type": "module",
  "version": "0.0.1",
  "dependencies": {
    "@webext-core/messaging": "catalog:prod",
    "es-toolkit": "catalog:prod",
    "solid-js": "catalog:frontend",
    "stats.js": "catalog:prod",
    "up-fetch": "catalog:prod",
    "valibot": "catalog:prod"
  },
  "devDependencies": {
    "@sinclair/typemap": "catalog:script",
    "@types/node": "catalog:types",
    "@types/stats.js": "catalog:types",
    "@typescript/native-preview": "catalog:build",
    "@wxt-dev/module-solid": "catalog:build",
    "eslint": "catalog:lint",
    "globals": "catalog:lint",
    "prettier": "catalog:lint",
    "ts-morph": "catalog:build",
    "tsx": "catalog:script",
    "typescript": "catalog:build",
    "typescript-eslint": "catalog:build",
    "wxt": "catalog:build"
  },
  "pnpm": {
    "overrides": {
      "is-interactive": "npm:@socketregistry/is-interactive@^1.0.6",
      "is-unicode-supported": "npm:@socketregistry/is-unicode-supported@^1.0.5",
      "isarray": "npm:@socketregistry/isarray@^1.0.7",
      "object-assign": "npm:@socketregistry/object-assign@^1.0.5",
      "safe-buffer": "npm:@socketregistry/safe-buffer@^1.0.8",
      "shell-quote": "npm:shell-quote@^1.8.3",
      "typedarray": "npm:@socketregistry/typedarray@^1.0.7"
    }
  },
  "packageManager": "pnpm@10.19.0"
}
